<div class="row">
  <div class="small-12 medium-12 large-12 columns">

  	<div class="row">
  	  <div class="small-12 medium-3 large-3 columns">
  	  	
  	  	    <!-- Optional Classes: [callout radius] -->
  	  	<div class="panel">
  	  	  <p> #Todos </br>
  	  		Total orders: 0 </br>
  	  		Total products consumed: 0 </br>
  	  		Orders this week: 0 </br>
  	  		Orders this month: 0 </br>
  	  		Products with most orders: pizza </br>
  	  		Products with least orders: hamburger </br>
  	  	  </p>
  	  	</div>
        <%= link_to "Create Product", {:action => 'create_product'}, :class => "extended alert button" %>
  	  </div>

    	<div class="small-12 medium-9 large-9 columns">
        
        <% x = 0 %>
    	  <% @products.each do |p|%>
          <% if x == 0 %>
          <div class="row" data-equalizer>
          <% x+=1 %>
          <% else %>
          <% x+=1 %>
          <% end %>
              <div class = "small-12 medium-4 large-4 columns end product_small" data-equalizer-watch>
        		  <h4> <%= p.name %> </h4>
              <ul class="button-group">
                <li><%= link_to "Edit Product", {:action => "edit_product", :id => p.id}, :class => "tiny button" %></li>     
                <li><%= link_to "Delete Product", {:action => "delete_product", :id => p.id}, :class => "tiny button" %></li>

              </ul>
              <%= image_tag(p.picture_url) %>
              <%= simple_format(p.details) %>
              <span class="price_text"> Php <%= p.price %> </span>
              <!-- Button Group Optional Classes: [radius round] -->
            </div>
          <% if x == 3 %>
          </div>
          <% x = 0 %>
          <% end %>
          
    	  <% end %>
        
    	</div>
  	</div>
  </div>
</div>
