<div class="row">
  <div class="small-12 medium-12 large-12 columns">
  	<div class="panel">
      <% if flash[:message] %>
      <%= "</p> #{flash[:message]} </p>"%>
      <% end %>
  	  <%= form_for :product, :url => {:action => 'submit_create'} do |f| -%>
  	    <p>Product Name <%= f.text_field :name %>
  	    Price <%= f.text_field :price %>
  	    Picture URL<%= f.text_field :picture_url %>
  	    Details<%= f.text_area :details %>
  	    <%= submit_tag "Submit", :disable_with => 'Submiting...', :class => "button" %>
      </p>
  	  <% end -%>
  	</div>
  </div>
</div>