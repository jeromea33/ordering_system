<div class="small-12 medium-12 large-12 columns">
        
        <% x = 0 %>
    	  <% @products.each do |p|%>
          <% if x == 0 %>
          <div class="row" data-equalizer>
          <% x+=1 %>
          <% else %>
          <% x+=1 %>
          <% end %>
              <div class = "small-12 medium-4 large-4 columns end product" data-equalizer-watch>
        		  
        	  <h3> <%= p.name %> </h3>
              <%= image_tag(p.picture_url) %>
              <%= simple_format(p.details) %>
              <span class="price_text"> Php <%= p.price %> </span>

              <% form_for :order, :url => {:action => 'add_to_order'} do |f| -%>
                Quantity
                <%= submit_tag "Submit", :disable_with => 'Submiting...', :class => "button" %>
              <% end -%>
              <!-- Button Group Optional Classes: [radius round] -->
            </div>
          <% if x == 3 %>
          </div>
          <% x = 0 %>
          <% end %>
          
    	  <% end %>
        
    	</div>