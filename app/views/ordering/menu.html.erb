<div class="small-12 medium-12 large-12 columns">
        
        <% x = 0 %>
    	  <% @products.each do |p|%>
          <% if x == 0 %>
          <div class="row" data-equalizer>
          <% x+=1 %>
          <% else %>
          <% x+=1 %>
          <% end %>
              <div class = "small-12 medium-4 large-4 columns end product" data-equalizer-watch>
        		  
              <%= image_tag(p.picture_url) %>
              <%= simple_format(p.details) %>
              <span class="price_text"> Php <%= p.price %> </span>
              <!-- Button Group Optional Classes: [radius round] -->
            </div>
          <% if x == 3 %>
          </div>
          <% x = 0 %>
          <% end %>
          
    	  <% end %>
        
    	</div>